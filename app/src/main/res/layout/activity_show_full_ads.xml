<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.irprogram.tirbargh.show_full_ads">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_above="@+id/btnBackToPreviousPage">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/full_ads_img"
                android:layout_gravity="center_horizontal"
                android:onClick="LoadImageFullScreen" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:id="@+id/full_ads_title"
                android:layout_gravity="center_horizontal"
                android:paddingTop="15dp"
                android:textSize="30dp"
                android:textColor="#010101"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="intro"
                android:id="@+id/full_ads_intro"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="25dp"
                android:paddingTop="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="description"
                android:id="@+id/full_ads_desc"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="30dp"
                android:paddingTop="15dp"
                android:textColor="#0200a5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="seller"
                android:id="@+id/full_ads_seller"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="25dp"
                android:paddingTop="15dp"
                android:textColor="#a54100" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email"
                android:id="@+id/full_ads_email"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="30dp"
                android:paddingTop="15dp"
                android:textColor="#007611" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="phone"
                android:id="@+id/full_ads_phone"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="25dp"
                android:paddingTop="15dp"
                android:textColor="#a5009b" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cat"
                    android:id="@+id/full_ads_cat"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:paddingTop="15dp" />

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/seperator"
                    android:textSize="25dp"
                    android:paddingTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="date"
                    android:id="@+id/full_ads_date"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:paddingTop="15dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_Back_to_home"
        android:id="@+id/btnBackToPreviousPage"
        android:onClick="onBtnBackToPreviousPageClick"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
